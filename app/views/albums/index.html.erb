<h1>Albums#index</h1>
<p>Find me in app/views/albums/index.html.erb</p>

<%= link_to "New Album", new_album_path %>

<table class="table">
      <thead>
        <td>Name</td>
        <td>Cover</td>
        <td>Artist name</td>
        <td>Year</td>
      </thead>
      <tbody>
        <% @albums.each do |album | %>
           <tr>
            <td> <%= album.name %> </td>
            <td><%= image_tag(album.cover, size: "100x100") %></td>
            <%# album.artist gets all artist info related to the album %>
            <td> <%= album.artist.name %> </td>
            <td><%= album.year %></td>
           </tr>
        <% end %>
      </tbody>
    </table>