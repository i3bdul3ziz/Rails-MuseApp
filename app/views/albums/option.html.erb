<h1>Option#For#New#Album</h1>


<%= form_for @album do |f| %>
<div>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %>
</div>

<div>
    <%= f.label :cover, "cover" %>
    <%= f.url_field :cover, class: "form-control" %>
</div>

<div>
    <%= f.label :year, "year" %>
    <%= f.text_field :year, class: "form-control" %>
</div>

<div>
    <%= f.label :artist_id, "Artist Name" %>
    <%= f.select :artist_id, options_from_collection_for_select(@artists, "id", "name"), {}, { class: "form-control"} %>
</div>

<%= f.submit "Add Album", class: "btn btn-block btn-warning"%>
<% end %>