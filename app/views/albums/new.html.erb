<h1>Albums#new</h1>
<p>Find me in app/views/albums/new.html.erb</p>

<%= form_for [@artist, @album] do |f|%>
<div>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %>
</div>

<div>
    <%= f.label :cover, "cover" %>
    <%= f.url_field :cover, class: "form-control" %>
</div>

<div>
    <%= f.label :year, "year" %>
    <%= f.text_field :year, class: "form-control" %>
</div>

<%= f.hidden_field :artist_id, :value => @artist.id %>

<%= f.submit "Add Album", class: "btn btn-block btn-warning"%>

<% end %>